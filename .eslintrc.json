{
  "root": true,
  "ignorePatterns": ["dist/", "node_modules/"],
  "overrides": [
    {
      "files": ["*.ts"],
      "parserOptions": {
        "project": ["tsconfig.json"],
        "tsconfigRootDir": "."
      },
      "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
      ],
      "plugins": ["@typescript-eslint"],
      "rules": {
        "@typescript-eslint/no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
        "eqeqeq": ["warn", "always"]
      }
    },
    {
      "files": ["*.html"],
      "rules": {}
    }
  ]
}
